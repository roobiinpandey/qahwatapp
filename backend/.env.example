# Environment Configuration Template
# IMPORTANT: Copy this to .env and fill in real values
# NEVER commit .env file to Git!

# Application Settings
NODE_ENV=production
PORT=5001

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=app
MONGODB_ATLAS_PUBLIC_KEY=your_public_key
MONGODB_ATLAS_PRIVATE_KEY=your_private_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_at_least_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_REFRESH_EXPIRE=30d

# CORS and URLs
FRONTEND_URL=http://localhost:3000
BASE_URL=https://yourapp.onrender.com

# Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password

# Firebase Configuration (for Push Notifications)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project","private_key_id":"key_id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----","client_email":"service@project.iam.gserviceaccount.com","client_id":"client_id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token"}
FIREBASE_PROJECT_ID=your_firebase_project_id

# Email Configuration
EMAIL_FROM_NAME=Your App Name
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# Optional SMTP Settings
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
